# Environment Configuration
# Copy this file to .env.local and update the values

# Application
VITE_APP_NAME="Job Application Platform"
VITE_APP_VERSION="1.0.0"
VITE_APP_DESCRIPTION="Modern job application platform with AI-powered matching"

# API Configuration
VITE_API_BASE_URL="http://localhost:3000/api"
VITE_API_TIMEOUT="10000"

# Authentication
VITE_JWT_SECRET="your-jwt-secret-key"
VITE_REFRESH_TOKEN_SECRET="your-refresh-token-secret"

# External Services
VITE_CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
VITE_CLOUDINARY_API_KEY="your-cloudinary-api-key"
VITE_CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# Email Service
VITE_EMAIL_SERVICE="sendgrid" # sendgrid, nodemailer, aws-ses
VITE_SENDGRID_API_KEY="your-sendgrid-api-key"
VITE_FROM_EMAIL="noreply@yourapp.com"

# AI Services
VITE_OPENAI_API_KEY="your-openai-api-key"
VITE_AI_MODEL="gpt-3.5-turbo"

# Analytics
VITE_GOOGLE_ANALYTICS_ID="your-ga-id"
VITE_MIXPANEL_TOKEN="your-mixpanel-token"

# Feature Flags
VITE_ENABLE_ANALYTICS="true"
VITE_ENABLE_AI_MATCHING="true"
VITE_ENABLE_EMAIL_NOTIFICATIONS="true"
VITE_ENABLE_PUSH_NOTIFICATIONS="false"

# Development
VITE_DEBUG="false"
VITE_LOG_LEVEL="info"
VITE_ENABLE_DEVTOOLS="true"

# Security
VITE_CORS_ORIGIN="http://localhost:3000"
VITE_RATE_LIMIT_WINDOW="900000" # 15 minutes
VITE_RATE_LIMIT_MAX="100" # requests per window

# File Upload
VITE_MAX_FILE_SIZE="10485760" # 10MB
VITE_ALLOWED_FILE_TYPES="pdf,doc,docx"

# Pagination
VITE_DEFAULT_PAGE_SIZE="10"
VITE_MAX_PAGE_SIZE="100"

# Cache
VITE_CACHE_TTL="3600000" # 1 hour
VITE_ENABLE_CACHE="true"

# Performance
VITE_ENABLE_COMPRESSION="true"
VITE_ENABLE_LAZY_LOADING="true"
VITE_IMAGE_QUALITY="80"

# Monitoring
VITE_SENTRY_DSN="your-sentry-dsn"
VITE_ENABLE_ERROR_REPORTING="true"

# Social Login
VITE_GOOGLE_CLIENT_ID="your-google-client-id"
VITE_LINKEDIN_CLIENT_ID="your-linkedin-client-id"
VITE_GITHUB_CLIENT_ID="your-github-client-id"

# Payment (if applicable)
VITE_STRIPE_PUBLISHABLE_KEY="your-stripe-publishable-key"
VITE_PAYPAL_CLIENT_ID="your-paypal-client-id"

# WebSocket
VITE_WS_URL="ws://localhost:3000"
VITE_ENABLE_REAL_TIME="true"

# CDN
VITE_CDN_URL="https://cdn.yourapp.com"
VITE_ENABLE_CDN="false"

# Internationalization
VITE_DEFAULT_LOCALE="en"
VITE_SUPPORTED_LOCALES="en,es,fr,de"

# Theme
VITE_DEFAULT_THEME="light"
VITE_ENABLE_DARK_MODE="true"
VITE_ENABLE_SYSTEM_THEME="true"
